<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SculptifyBody.Mobile.Views.ForgotPasswordPage"
             Title="Forgot Password">
    <VerticalStackLayout Margin="10">
        <Entry x:Name="EmailEntry" Placeholder="Please enter email" Style="{StaticResource EntryStyle}"/>
        <Button Text="Continue" Clicked="OnContinue"/>
    </VerticalStackLayout>
</ContentPage>