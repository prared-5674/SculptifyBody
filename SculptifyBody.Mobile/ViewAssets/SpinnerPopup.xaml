<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SculptifyBody.SculptifyBody.Mobile.ViewAssets.SpinnerPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False" Size="175,175" Color="{DynamicResource PopupOutsideBackgroundColor}">
    <Border BackgroundColor="{DynamicResource PopupBackgroundColor}" StrokeShape="RoundRectangle 10,10,10,10">
        <Grid RowDefinitions="2*,*">
            <ActivityIndicator IsRunning="True" />
            <Label Grid.Row="1" Text="Loading..." HorizontalOptions="Center"/>
        </Grid>
    </Border>
</toolkit:Popup>